<Project Sdk="Microsoft.NET.Sdk.Web">
    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="ElectronSharp.API" Version="25.0.1.39151" />
        <PackageReference Include="MudBlazor" Version="6.4.1" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\Core\ServiceBus\ServiceBus.csproj" />
        <ProjectReference Include="..\Website\Website.csproj" />
    </ItemGroup>
    <ItemGroup>
        <ContentIncludedByDefault Remove="wwwroot\css\custom.css" />
    </ItemGroup>
    <ItemGroup>
        <Content Update="electron.manifest.json">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>
</Project>