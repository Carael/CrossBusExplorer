<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="ContentText" Lines="4" Disabled="true"></MudTextField>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Default" OnClick="Submit">Close</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] 
    MudDialogInstance MudDialog { get; set; }
    
    [Parameter]
    public string ContentText { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
}