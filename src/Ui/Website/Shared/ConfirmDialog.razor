<MudDialog>
    <DialogContent>
        @ContentText
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Default" OnClick="@(() => Submit(false))">No</MudButton>
        <MudButton Color="Color.Success" OnClick="@(() => Submit(true))">Yes</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public string ContentText { get; set; }

    void Submit(bool result) => MudDialog.Close(DialogResult.Ok(result));
}